<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Arguments/>
  <Context/>
  <Model/>
  <View>
    <DataSet id="dataSetLiaisons">
      <Property name="dataProvider">qs.commonService#queryLiaisons</Property>
      <Property name="pageSize">20</Property>
      <Property name="dataType">[Liaisons]</Property>
    </DataSet>
    <UpdateAction id="actionUpdate">
      <Property name="successMessage">保存成功!</Property>
      <Property name="executingMessage">正在保存...</Property>
      <Property name="dataResolver">qs.commonService#saveLiaisons</Property>
      <UpdateItem>
        <Property name="dataSet">dataSetLiaisons</Property>
      </UpdateItem>
    </UpdateAction>
    <ToolBar>
      <DataPilot>
        <ClientEvent name="onSubControlAction">var datas = view.get(&quot;#dataSetLiaisons.data&quot;);&#xD;
var action = view.get(&quot;#actionUpdate&quot;);&#xD;
switch (arg.code) {&#xD;
	case &quot;+&quot;:{&#xD;
		datas.insert();&#xD;
		view.get(&quot;#dialogLiaisons&quot;).show();&#xD;
		arg.processDefault = false;&#xD;
		break;&#xD;
	}&#xD;
	case &quot;-&quot;:{&#xD;
		dorado.MessageBox.confirm(&quot;您真的想删除当前数据吗?&quot;, function(){&#xD;
			datas.remove();&#xD;
			actionUpdate.execute();&#xD;
		});&#xD;
		arg.processDefault = false;&#xD;
		break;&#xD;
	}&#xD;
}</ClientEvent>
        <Property name="dataSet">dataSetLiaisons</Property>
        <Property name="itemCodes">pages,+,-,x</Property>
      </DataPilot>
      <Separator/>
      <ToolBarButton>
        <ClientEvent name="onClick">var data=view.get(&quot;#dataSetLiaisons.data&quot;);&#xD;
if(data.current){&#xD;
	view.get(&quot;#dialogLiaisons&quot;).show();&#xD;
}else{&#xD;
	dorado.MessageBox.alert(&quot;当前表没有信息可供编辑!&quot;);&#xD;
}</ClientEvent>
        <Property name="caption">修改</Property>
        <Property name="icon">url(>skin>common/icons.gif) -200px -0px</Property>
      </ToolBarButton>
      <ToolBarButton>
        <Property name="caption">保存</Property>
        <Property name="icon">url(>skin>common/icons.gif) -140px -20px</Property>
        <Property name="action">actionUpdate</Property>
      </ToolBarButton>
      <ToolBarButton>
        <ClientEvent name="onClick">var data = view.get(&quot;#formCondition.entity&quot;);&#xD;
with (view.get(&quot;#dataSetLiaisons&quot;)){&#xD;
	set(&quot;parameter&quot;, data);&#xD;
	flushAsync();&#xD;
}</ClientEvent>
        <Property name="caption">查询</Property>
        <Property name="icon">url(>skin>common/icons.gif) -20px -40px</Property>
      </ToolBarButton>
    </ToolBar>
    <AutoForm id="formCondition">
      <Property name="cols">*,*,*</Property>
      <AutoFormElement>
        <Property name="name">name</Property>
        <Property name="label">姓名</Property>
        <Editor/>
      </AutoFormElement>
      <AutoFormElement>
        <Property name="name">nickName</Property>
        <Property name="label">昵称</Property>
        <Editor/>
      </AutoFormElement>
      <AutoFormElement>
        <Property name="name">telphone</Property>
        <Property name="label">手机号</Property>
        <Editor/>
      </AutoFormElement>
    </AutoForm>
    <DataGrid>
      <ClientEvent name="onDataRowDoubleClick">view.get(&quot;#dialogLiaisons&quot;).show();</ClientEvent>
      <Property name="dataSet">dataSetLiaisons</Property>
      <Property name="dataType">Liaisons</Property>
      <Property name="readOnly">true</Property>
      <IndicatorColumn/>
      <RowNumColumn/>
      <DataColumn name="name">
        <Property name="property">name</Property>
        <Property name="caption">姓名</Property>
        <Property name="width">150</Property>
      </DataColumn>
      <DataColumn>
        <Property name="property">duty</Property>
        <Property name="caption">职务</Property>
        <Property name="width">150</Property>
        <Property name="name">duty</Property>
      </DataColumn>
      <DataColumn name="telphone">
        <Property name="property">telphone</Property>
        <Property name="caption">手机</Property>
        <Property name="width">150</Property>
      </DataColumn>
      <DataColumn>
        <Property name="property">email</Property>
        <Property name="caption">邮件地址</Property>
        <Property name="name">email</Property>
      </DataColumn>
    </DataGrid>
    <Dialog id="dialogLiaisons">
      <Property name="center">true</Property>
      <Property name="width">450</Property>
      <Property name="height">220</Property>
      <Property name="modal">true</Property>
      <Property name="closeable">false</Property>
      <Property name="caption">数据编辑</Property>
      <Buttons>
        <Button>
          <ClientEvent name="onClick">var dialog=view.get(&quot;#dialogLiaisons&quot;);&#xD;
var action=view.get(&quot;#actionUpdate&quot;);&#xD;
dorado.MessageBox.confirm(&quot;您真的要保存吗?&quot;,function(){&#xD;
	action.execute(function(){&#xD;
		dialog.hide();&#xD;
	});&#xD;
})</ClientEvent>
          <Property name="caption">确定</Property>
          <Property name="icon">url(>skin>common/icons.gif) -140px -20px</Property>
        </Button>
        <Button>
          <ClientEvent name="onClick">var data=view.get(&quot;#dataSetLiaisons&quot;).getData();&#xD;
var dialog=view.get(&quot;#dialogLiaisons&quot;);&#xD;
dorado.MessageBox.confirm(&quot;您真的要取消当前操作吗？&quot;,function(){&#xD;
	data.cancel();&#xD;
	dialog.hide();&#xD;
});</ClientEvent>
          <Property name="caption">取消</Property>
          <Property name="icon">url(>skin>common/icons.gif) -40px -0px</Property>
        </Button>
      </Buttons>
      <Children>
        <AutoForm>
          <Property name="dataSet">dataSetLiaisons</Property>
          <Property name="cols">*</Property>
          <Property name="labelAlign">right</Property>
          <Property name="labelSeparator">：</Property>
          <AutoFormElement name="name">
            <Property name="name">name</Property>
            <Property name="property">name</Property>
            <Property name="label">姓名</Property>
            <Editor/>
          </AutoFormElement>
          <AutoFormElement>
            <Property name="name">duty</Property>
            <Property name="property">duty</Property>
            <Property name="label">职务</Property>
            <Property name="name">duty</Property>
            <Editor/>
          </AutoFormElement>
          <AutoFormElement name="telphone">
            <Property name="name">telphone</Property>
            <Property name="property">telphone</Property>
            <Property name="label">手机</Property>
            <Editor/>
          </AutoFormElement>
          <AutoFormElement>
            <Property name="name">email</Property>
            <Property name="property">email</Property>
            <Property name="label">邮件地址</Property>
            <Property name="name">email</Property>
            <Editor/>
          </AutoFormElement>
        </AutoForm>
      </Children>
      <Tools/>
    </Dialog>
  </View>
</ViewConfig>
