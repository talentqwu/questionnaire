<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Arguments/>
  <Context/>
  <Model>
    <DataType name="Industry">
      <Property name="creationType">com.kam.qs.entity.common.Industry</Property>
      <Property name="creationType">com.kam.qs.entity.common.Industry</Property>
       		<PropertyDef name="code">
			 				<Property name="dataType">String</Property>
			 			 				<Property name="label">代码</Property>
			 		</PropertyDef>
    			<PropertyDef name="name">
			 				<Property name="dataType">String</Property>
			 			 				<Property name="label">名称</Property>
			 		</PropertyDef>
    	    </DataType>
  </Model>
  <View>
    <Property name="title">Industry信息维护</Property>
    <DataSet id="dataSetIndustry">
      <Property name="dataProvider">industryPR#queryIndustry</Property>
      <Property name="pageSize">20</Property>
      <Property name="dataType">[Industry]</Property>
    </DataSet>
    <UpdateAction id="actionUpdate">
      <Property name="successMessage">保存成功!</Property>
      <Property name="executingMessage">正在保存...</Property>
      <Property name="dataResolver">industryPR#saveIndustry</Property>
      <UpdateItem>
        <Property name="dataSet">dataSetIndustry</Property>
      </UpdateItem>
    </UpdateAction>
    <ToolBar>
      <DataPilot>
        <Property name="dataSet">dataSetIndustry</Property>
        <Property name="itemCodes">pages,+,-,x</Property>
      </DataPilot>
      <Separator/>
      <ToolBarButton>
        <Property name="caption">保存</Property>
        <Property name="icon">url(>skin>common/icons.gif) -140px -20px</Property>
        <Property name="action">actionUpdate</Property>
      </ToolBarButton>
      <ToolBarButton>
        <ClientEvent name="onClick">var data = view.get(&quot;#formCondition.entity&quot;);&#xD;
with (view.get(&quot;#dataSetIndustry&quot;)){&#xD;
	set(&quot;parameter&quot;, data);&#xD;
	flushAsync();&#xD;
}</ClientEvent>
        <Property name="caption">查询</Property>
        <Property name="icon">url(>skin>common/icons.gif) -20px -40px</Property>
      </ToolBarButton>
    </ToolBar>
    <AutoForm id="formCondition">
      <Property name="cols">*,*,*</Property>
          </AutoForm>
    <DataGrid>
      <Property name="dataSet">dataSetIndustry</Property>
      <Property name="dataType">Industry</Property>
             <DataColumn name="code">
        <Property name="property">code</Property>
      </DataColumn>
             <DataColumn name="name">
        <Property name="property">name</Property>
      </DataColumn>
           </DataGrid>
  </View>
</ViewConfig>
